    <div class = "container-full">
            <h1>Registration Form</h1>
        <form name="registration" action="/about/forms/confirmation" onsubmit="return validateForm()" method = "POST">
            <div class = "row form contact"> <!--Name information-->
                <div class = "col-md-2">
                    First Name*:
                </div>
                <div class = "col-md-3 col-offset-md-2">
                    <input type="text" name = "firstName" required minlength="2" maxlength="20">
                </div>
                <div class="col-md-2"></div>
                <div class = "col-md-2 col-offset-md-7">
                    Last Name*:
                </div>
                <div class = "col-md-3 col-offset-md-9">
                    <input type = "text" name = "lastName" required minlength="2" maxlength="20">
                </div>
            </div>  <!--End Name Info-->
            <div class = "row form contact"> <!--Email information-->
                <div class = "col-md-2">
                    Email*:
                </div>
                <div class = "col-md-3 col-offset-md-2">
                    <input type="email" name = "email">
                </div>
                <div class="col-md-2"></div>
                <div class = "col-md-2 col-offset-md-7">
                    Re-Enter Email*:
                </div>
                <div class = "col-md-3 col-offset-md-9">
                    <input type = "email" name = "reEmail">
                </div>
            </div> <!--End Email info-->
            <div class="row form contact"><!--Phone-->
                <div class = "col-md-2">
                    Phone*: ###-####
                </div>
                <div class = "col-md-3 col-offset-md-2">
                    <input type="tel" name = "phone" required pattern="[0-9]{3}-[0-9]{4}">
                </div>
            </div><!--end phone-->
            

            <div class = "row form" id="spacing"> <!--Questions-->
                <div class = "col-md-2">
                    Education Level:
                </div>
                <div class = "col-md-3 col-offset-md-2">
                    <select name = "education">
                        <option value="Not Provided">Select One</option>
                        <option value="High School/GED">High School/GED</option>
                        <option value="College">College</option>
                        <option value="Graduate Studies">Graduate Studies</option>
                        <option value="Ph.D">Ph.D</option>
                    </select>
                </div>
                <div class = "col-md-2"></div>
                <div class = "col-md-2 col-offset-md-7">
                    Annual Income
                </div>
                <div class = "col-md-3 col-offset-md-9">
                    <select name = "income">
                        <option value="Not Provided">Select One</option>
                        <option value="$0 - $50,000">$0 - $50,000</option>
                        <option value="$50,000 - $100,000">$50,000 - $100,000</option>
                        <option value="$100,000 +">$100,000 +</option>
                    </select>
                </div>
            </div><!--end Questions-->

            <div class = "row form" id="spacing">  <!--Address-->
                <div class = "col-md-2">
                    Street Address*:
                </div>
                <div class = "col-md-3 col-offset-md-3">
                    <input type="text" name = "address" required maxlength="35">
                </div>  
                <div class='col-md-2'></div>
                <div class = "col-md-2 col-offset-md-7">
                    Zip Code*:
                </div>
                <div class = "col-md-3 col-offset-md-9">
                    <input type="text" name="zipCode" required minlength="5" maxlength="5">
                </div>
            </div> <!--end Address-->

            <div class ="row form" id="spacing"> <!-- TOU-->
                <div class = "col-md-9">
                    By selecting the check box you agree to the terms and conditions of this site.  Please contact us if there are questions.*
                </div>
                <div class = "col-md-3 col-offset-md-9 checkbox">
                    <input type="checkbox" name="TOU" required>
                </div>
            </div><!--end TOU-->
            <div class="row">
                <div class = "text-xs-center" id="spacing">
                    <div class="g-recaptcha" id="rcaptcha" data-sitekey="6Lf0XawUAAAAAGRLqNdNBytt4eOMBRVQeDk36_EF">
                    </div>
                </div>    
            </div>
            <span id="captcha" style="margin-left:100px;color:red" />

            <div class ="row form"><!--Buttons-->
                <div class="form col-md-6">
                    <input type="reset" name=" Cancel" value="Clear">
                </div>
                <div class="form col-md-6 col-offset-md-6">
                    <input type="submit" name="Submit" value="Send">
                </div>
            </div> <!--end buttons-->
        </form> <!--end form-->
        <div id="map"></div>
    </div><!--container div-->
