<!DOCTYPE html>


<head>
    <%- include ../views/partials/head.ejs%>
</head>

<header>
    <% include ../views/partials/header.ejs%>
</header>

<body class="container">
    <main>
        <div class="col-md-9 personal-info">
            <h3>Edit Your Profile</h3>

            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-lg-3 control-label">First Name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" placeholder="EJS TAG FIRST NAME">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Last Name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" placeholder="EJS TAG LAST NAME">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" placeholder="EJS TAG EMAIL">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Current Password:</label>
                    <div class="col-md-8">
                        <input class="form-control" type="password" placeholder="EJS TAG CURRENT PASSWORD"> <br> <button class="btn btn-danger" id="edit-password">Change Password</button>
                    </div>
                </div>

                <div class="form-group save-buttons">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <a href="#"><button class="btn btn-success">Save Changes</button></a>
                        <a href="profile.html"><button class="btn btn-default">Cancel</button></a>

                    </div>
                </div>
        </div>
        <div class="col-md-9 password-info">
            <div class="form-group">
                <label class="col-md-3 control-label">New Password:</label>
                <div class="col-md-8">
                    <input class="form-control" type="password" placeholder="new password">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Confirm New Password:</label>
                <div class="col-md-8">
                    <input class="form-control" type="password" placeholder="confirm new password">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                    <input type="button" class="btn btn-success" value="Save Changes">
                    <span></span>
                    <input type="reset" class="btn btn-default" value="Cancel">
                </div>
            </div>
            </form>
        </div>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <script type="text/javascript">
            $(function() {
                $('#edit-password').on('click', function(e) {
                    $('.password-info').css('display', 'inline');
                    $('.personal-info').css('display', 'inline');
                    $('.save-buttons').css('display', 'none');
                    e.preventDefault();
                });
            });
        </script>


    </main>
    <footer>
        <%-include ../views/partials/footer.ejs%>
    </footer>

    </html>